<!-- Validation failure messages -->
<% if @place.errors.any? %>
  <% @place.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Place</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_place" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for meet -->
      <div class="form-group">
        <label for="meet" class="control-label">
          Meet
        </label>
        <select class="form-control" name="meet">
          <% Meet.all.each do |meet| %>
            <option value="<%= meet.id %>"><%= meet.meet_name %></option>
          <% end %>  
        </select>
      </div>

      <!-- Label and input for goal_times -->
      <div class="form-group">
        <label for="goal_times" class="control-label">
          Goal time
        </label>

        <input type="text" id="goal_times" name="goal_times" placeholder="Goal time" class="form-control" value="<%= @place.goal_times %>">
      </div>
      
      <!-- Label and input for Actual Times -->
      <div class="form-group">
        <label for="actual_time" class="control-label">
          Actual Time
        </label>
        
        <input type="text" id="actual_time" name="actual_time" placeholder="Actual Time" class="form-control" value="<%= @place.actual_times %>">
      </div>

      <!-- Label and input for place -->
      <div class="form-group">
        <label for="place" class="control-label">
          Place
        </label>

        <input type="text" id="place" name="place" placeholder="Place" class="form-control">
      </div>

      <button class="btn btn-success">
        Create Place
      </button>
      or
      <a href="/places">Cancel</a>
    </form>
  </div>
</div>
