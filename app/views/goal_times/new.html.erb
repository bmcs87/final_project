<!-- Validation failure messages -->
<% if @goal_time.errors.any? %>
  <% @goal_time.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Goal Time</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_goal_time" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for goal_time -->
      <div class="form-group">
        <label for="goal_time" class="control-label">
          Goal time
        </label>

        <input type="text" id="goal_time" name="goal_time" placeholder="Goal time" class="form-control" value="<%= @goal_time.goal_time %>">
      </div>

      <!-- Label and input for users_id -->
      <div class="form-group">
        <label for="users_id" class="control-label">
          Users
        </label>

        <input type="text" id="users_id" name="users_id" placeholder="Users" class="form-control" value="<%= @goal_time.users_id %>">
      </div>

      <button class="btn btn-success">
        Create Goal Time
      </button>
      or
      <a href="/goal_times">Cancel</a>
    </form>
  </div>
</div>
